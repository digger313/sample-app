<h2>
  My Posts
  <%= link_to 'Add New', new_post_path, class: 'header-menu' %>
</h2>
<ul>
<% @posts.each do |post| %>
<ul>
<li><%= link_to post.content, post_path(post) %>
<%= link_to '[Edit]', edit_post_path(post), class: 'command' %>
<%= link_to '[x]',
  post_path(post),
  method: :delete,
  class: 'command',
  data: { confirm: 'Sure?' } %>
</li>
</ul>
<% end %>
</ul>
